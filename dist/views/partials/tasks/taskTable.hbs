{{#if tasks}}
<table class="table table-bordered table-hover table-dark table-sm">
  <thead>
    <tr class="product-row">
      {{!-- <th>NÂ°</th> --}}
      <th class="producto">Producto</th>
      <th class="cantidad">Cantidad</th>
      <th class="acciones">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
    <tr>
      {{!-- <td>{{@index}}</td> --}}
      <td class="producto">{{title}}</td>
      <td class="cantidad">{{description}}</td>
      <td class="acciones">
        <div class="btn-group">
          {{#if done}}
          <a class="btn btn-success" href="/tasks/{{_id}}/toggleDone">Listo</a>
          {{else}}
          <a class="btn btn-dark" href="/tasks/{{_id}}/toggleDone">Pedir</a>
          {{/if}}
          <a href="/tasks/{{_id}}/delete" class="btn btn-danger"><i class="fas fa-trash"></i></a>
          <a href="/tasks/{{_id}}/edit" class="btn btn-info"><i class="fas fa-pencil-alt"></i></a>
        </div>
      </td>

    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>No tasks</h1>
    <img src="/icons/empty.svg" class="w-75" />
  </div>

</div>
{{/if}}