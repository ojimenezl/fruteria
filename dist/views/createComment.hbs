<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h1>Comentario</h1>

          <form action="/tasks/{{task._id}}/addCommentPedido" method="post">
            <div class="mb-3">
              <input
                class="form-control"
                type="text"
                name="title"
                placeholder="Title"
                value="{{task.title}}"
              disabled/>
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="comentarioPedido"
                rows="3"
                placeholder="Agrega un comentario al Pedido"
              >{{task.comentarioPedido}}</textarea>
            </div>
            <button class="btn btn-primary" type="submit">Listo</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>